{
  "compilerOptions": {
    "target": "es2017",                                 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",                             
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                                        
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "strictPropertyInitialization": false,               
    "useUnknownInCatchVariables": false,                
    "skipLibCheck": true                                
  }
}